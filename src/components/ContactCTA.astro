<section id="contact" class="py-20 bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-700 text-white">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Main CTA -->
      <h2 class="text-3xl md:text-5xl font-bold mb-6 leading-tight">
        ¿Listo para transformar tu restaurante?
      </h2>
      <p class="text-xl md:text-2xl mb-12 opacity-90 leading-relaxed">
        Forma parte de la beta gratuita de Maingoo y sé de los primeros en revolucionar la gestión de tu restaurante.
      </p>
      
      
      <!-- Contact Form -->
      <div class="bg-white/10 dark:bg-black/20 backdrop-blur-sm rounded-2xl p-8 max-w-2xl mx-auto">
        <h3 class="text-2xl font-bold mb-6">Contáctanos Directamente</h3>
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <input 
                type="text" 
                placeholder="Nombre completo"
                class="w-full px-4 py-3 rounded-lg bg-white/20 dark:bg-white/10 border border-white/30 dark:border-white/20 text-white placeholder-white/70 dark:placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-white/50 dark:focus:ring-white/40"
              />
            </div>
            <div>
              <input 
                type="email" 
                placeholder="Email empresarial"
                class="w-full px-4 py-3 rounded-lg bg-white/20 dark:bg-white/10 border border-white/30 dark:border-white/20 text-white placeholder-white/70 dark:placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-white/50 dark:focus:ring-white/40"
              />
            </div>
          </div>
          <div class="grid grid-cols-1 gap-6">
            <div>
              <select class="w-full px-4 py-3 rounded-lg bg-white/20 dark:bg-white/10 border border-white/30 dark:border-white/20 text-white focus:outline-none focus:ring-2 focus:ring-white/50 dark:focus:ring-white/40">
                <option value="" class="text-gray-800">Tamaño del restaurante</option>
                <option value="small" class="text-gray-800">1-2 ubicaciones</option>
                <option value="medium" class="text-gray-800">3-10 ubicaciones</option>
                <option value="large" class="text-gray-800">11+ ubicaciones</option>
              </select>
            </div>
            <div>
              <textarea 
                placeholder="Cuéntanos sobre tu restaurante y cómo podemos ayudarte"
                rows="4"
                class="w-full px-4 py-3 rounded-lg bg-white/20 dark:bg-white/10 border border-white/30 dark:border-white/20 text-white placeholder-white/70 dark:placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-white/50 dark:focus:ring-white/40 resize-none"
              ></textarea>
            </div>
          </div>
          <button 
            type="submit"
            class="w-full bg-white text-blue-600 py-4 rounded-lg text-lg font-semibold hover:shadow-xl transition-all transform hover:-translate-y-1"
          >
            Enviar Mensaje
          </button>
        </form>
      </div>
      
      <!-- Contact Info -->
      <div class="mt-16 grid grid-cols-1 md:grid-cols-2 gap-8 text-center max-w-2xl mx-auto">
        <div>
          <div class="w-12 h-12 bg-white/20 dark:bg-white/10 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h4 class="font-semibold mb-2">Email</h4>
          <p class="opacity-90">hello@maingoo.com</p>
        </div>

        <div>
          <div class="w-12 h-12 bg-white/20 dark:bg-white/10 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h4 class="font-semibold mb-2">Chat en Vivo</h4>
          <p class="opacity-90">Disponible 24/7</p>
        </div>
      </div>
    </div>
  </div>
</section>
